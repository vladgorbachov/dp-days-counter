{
  "name": "dp-days-counter-updater",
  "version": "1.0.0",
  "description": "Update installer for DP Days Counter",
  "main": "main.js",
  "company": "DeLion Software",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.dp-days-counter.updater",
    "productName": "DP Days Counter Updater",
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    },
    "portable": {
      "artifactName": "DP-Days-Counter-Updater.exe"
    }
  },
  "keywords": ["updater", "electron", "dp-days-counter"],
  "author": "DeLion Software",
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.0.1",
    "electron-builder": "^24.9.1"
  }
} 