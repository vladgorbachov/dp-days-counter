<Window x:Class="DPDaysCounterWPF.HoursInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter DP Hours"
        Height="575" Width="910"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <!-- Modal overlay background -->
    <Grid Background="Transparent">
        <!-- Modal content container -->
        <Border CornerRadius="12" 
                Margin="20"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
            <Border.Background>
                <SolidColorBrush Color="#FF2A2A2A"/>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="60" ShadowDepth="20" Color="Black" Opacity="0.3"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" CornerRadius="12,12,0,0">
                    <Border.Background>
                        <SolidColorBrush Color="#FF1A1A1A"/>
                    </Border.Background>
                    <Grid Margin="25,20,25,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                 Text="Enter DP Hours" 
                                 FontSize="20" 
                                 FontWeight="Medium"
                                 Foreground="White"/>
                        
                        <Button x:Name="CloseButton" 
                               Grid.Column="1" 
                               Content="✕" 
                               Style="{DynamicResource CloseButtonStyle}"
                               Width="32" Height="32"
                               FontSize="16"
                               Click="CloseButton_Click"/>
                    </Grid>
                </Border>
                
                <!-- Date Display -->
                <Border Grid.Row="1" Padding="25,25,25,10">
                    <TextBlock x:Name="DateDisplay" 
                             Text="Monday, January 1, 2024" 
                             FontSize="18"
                             Foreground="#FF6A6A6A"
                             HorizontalAlignment="Center"
                             FontWeight="Medium"/>
                </Border>
                
                <!-- Hours Input -->
                <StackPanel Grid.Row="2" Margin="40,20,40,30">
                    <TextBlock Text="Hours (0-24):" 
                             FontSize="16"
                             Foreground="#FFB3B3B3"
                             FontWeight="Medium"
                             Margin="0,0,0,20"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button x:Name="DecreaseButton" 
                               Grid.Column="0" 
                               Content="−" 
                               Style="{DynamicResource ModernButtonStyle}"
                               Width="50" Height="50"
                               FontSize="24"
                               Click="DecreaseButton_Click"/>
                        
                        <TextBox x:Name="HoursInput" 
                                Grid.Column="1"
                                Text="0" 
                                FontSize="20"
                                FontWeight="Medium"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="20,0"
                                Width="120"
                                Height="50"
                                TextAlignment="Center"
                                PreviewTextInput="HoursInput_PreviewTextInput"
                                KeyDown="HoursInput_KeyDown">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Background" Value="#FF404040"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="BorderBrush" Value="#FF666666"/>
                                    <Setter Property="Padding" Value="12"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="12">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="Black" Opacity="0.1"/>
                                                    </Border.Effect>
                                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                                Focusable="false" 
                                                                HorizontalScrollBarVisibility="Hidden" 
                                                                VerticalScrollBarVisibility="Hidden"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsFocused" Value="True">
                                                        <Setter TargetName="border" Property="BorderBrush" Value="#FF4E4E4E"/>
                                                        <Setter TargetName="border" Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#4E4E4E" Opacity="0.3"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        
                        <Button x:Name="IncreaseButton" 
                               Grid.Column="2" 
                               Content="+" 
                               Style="{DynamicResource ModernButtonStyle}"
                               Width="50" Height="50"
                               FontSize="24"
                               Click="IncreaseButton_Click"/>
                    </Grid>
                </StackPanel>
                
                <!-- Buttons -->
                <Border Grid.Row="3">
                    <Border.Background>
                        <SolidColorBrush Color="#FF1A1A1A"/>
                    </Border.Background>
                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Right"
                              Margin="25,15,25,20">
                        <Button x:Name="SaveButton" 
                               Content="Save" 
                               Style="{DynamicResource ModernButtonStyle}"
                               Width="90" Height="40"
                               Margin="0,0,15,0"
                               Background="{StaticResource SaveButtonBrush}"
                               FontSize="16"
                               Click="SaveButton_Click"/>
                        <Button x:Name="CancelButton" 
                               Content="Cancel" 
                               Style="{DynamicResource ModernButtonStyle}"
                               Width="90" Height="40"
                               Background="{StaticResource CancelButtonBrush}"
                               FontSize="16"
                               Click="CancelButton_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window> 