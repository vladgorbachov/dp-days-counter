    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Assets\logo.ico</ApplicationIcon>
    <AssemblyTitle>DP Days Counter</AssemblyTitle>
    <AssemblyDescription>Professional application for tracking Dynamic Positioning hours on vessels</AssemblyDescription>
    <AssemblyCompany>DeLion Software</AssemblyCompany>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
